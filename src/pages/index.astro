---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import DestinationCard from '../components/DestinationCard.astro';
import type { Destination } from '../types/destination';

const destinations: Destination[] = [
  {
    title: 'Costa',
    description: 'The capital city of Ecuador, surrounded by mountains and known for its well-preserved colonial center.',
    image: '/images/costa.jpg'
  },
  {
    title: 'Galapagos',
    description: 'A volcanic archipelago in the Pacific Ocean, famous for its diverse wildlife and natural beauty.',
    image: '/images/galapagos.jpg'
  },
  {
    title: 'Sierra',
    description: 'An active stratovolcano in the Andes Mountains, popular for hiking and climbing.',
    image: '/images/sierra.jpg'
  }
];
---

<Layout title="Aventura - Ecuador">
  <Hero />
  <section class="container mx-auto py-16">
    <h2 class="text-3xl font-bold mb-8">More about Ecuador</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {destinations.map(destination => (
        <DestinationCard {...destination} />
      ))}
    </div>
  </section>
</Layout>
